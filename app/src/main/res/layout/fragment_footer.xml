<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_vertical">

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:background="@drawable/menu_indicator_selector"/>

    <ImageView
        android:id="@+id/ic_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_menu"
        android:layout_centerVertical="true"
        android:layout_marginStart="44dp"
        android:background="@drawable/offer_indicator_selector"/>

    <ImageView
        android:id="@+id/ic_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_offers"
        android:layout_marginStart="30dp"
        android:background="@drawable/home_indicator_selector"/>

    <ImageView
        android:id="@+id/ic_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_home"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:background="@drawable/profile_indicator_selector"/>

    <ImageView
        android:id="@+id/ic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:background="@drawable/more_indicator_selector"/>

</RelativeLayout>