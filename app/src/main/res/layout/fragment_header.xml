<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/back_black"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_black_btn"
        android:layout_marginStart="21dp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:background="@drawable/back_btn"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/back_black"
        android:text="@string/desserts"
        android:textColor="#4A4B4D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        android:background="@drawable/shopping_cart_img"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/shopping_cart_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_cart_white"
        tools:ignore="RtlHardcoded"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:visibility="gone"
        />

</RelativeLayout>